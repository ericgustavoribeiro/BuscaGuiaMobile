<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tela_resultado"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.edu.fafica.buscaguiaapp.TelaResultado">

    <!--
    <ImageView
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:src="@drawable/logo"
        android:id="@+id/imgBuscaGuia"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
-->

    <ImageView
        android:layout_width="80dp"
        android:layout_height="200dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/imgResul"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="Descrição"
        android:id="@+id/txtDescResul"
        android:layout_below="@+id/txtNomeResul"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="Endereço"
        android:layout_marginTop="29dp"
        android:layout_alignTop="@+id/txtDescResul"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/txtDescResul"
        android:layout_toLeftOf="@+id/txtNomeResul"
        android:layout_toStartOf="@+id/txtNomeResul" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/txtLogradouroResul"
        android:text="Logradouro"
        android:layout_below="@+id/txtDescResul"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/txtNumeroResul"
        android:text="Numero"
        android:layout_below="@+id/txtDescResul"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="Contato"
        android:layout_below="@+id/txtNumeroResul"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/contato"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="Tel"
        android:id="@+id/txtTelResul"
        android:layout_below="@+id/txtEmailResul"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/txtCelResul"
        android:text="Cel"
        android:layout_below="@+id/txtEmailResul"
        android:layout_toRightOf="@+id/txtTelResul"
        android:layout_toEndOf="@+id/txtTelResul"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Email"
        android:id="@+id/txtEmailResul"
        android:layout_below="@+id/txtNumeroResul"

        android:layout_marginTop="18dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="28dp"
        android:id="@+id/txtNomeResul"
        android:text="Nome"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_below="@+id/imgResul"
        android:layout_alignRight="@+id/txtBairroResul"
        android:layout_alignEnd="@+id/txtBairroResul"
        android:layout_marginRight="39dp"
        android:layout_marginEnd="39dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/txtBairroResul"
        android:text="Bairro"
        android:layout_alignBaseline="@+id/txtNumeroResul"
        android:layout_alignBottom="@+id/txtNumeroResul"
        android:layout_alignLeft="@+id/txtCelResul"
        android:layout_alignStart="@+id/txtCelResul" />


</RelativeLayout>
